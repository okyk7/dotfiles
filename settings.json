// Place your settings in this file to overwrite the default settings
{
    "editor.fontSize": 16,
    "editor.fontFamily": "MigMix 1M, Consolas, 'Courier New', monospace",
    "editor.tabSize": 4,
    "editor.renderWhitespace": "boundary",
    "editor.wordWrap": "on",
    "editor.renderControlCharacters": true,
    "editor.renderLineHighlight": "gutter",
    "workbench.colorTheme": "Default High Contrast",
    "files.eol": "\n",
    "files.insertFinalNewline": true,
    "extensions.autoUpdate": true,
    "files.autoSave": "off",
    "editor.insertSpaces": true,
    "editor.cursorBlinking": "smooth",
    "markdown.preview.fontFamily": "MigMix 1M, -apple-system, BlinkMacSystemFont, 'Segoe WPC', 'Segoe UI', 'HelveticaNeue-Light', 'Ubuntu', 'Droid Sans', sans-serif",
    "workbench.editor.enablePreview": false,
    "window.title": "${dirty}${activeEditorLong}","terminal.integrated.shell.windows": "C:\\Program Files\\Git\\bin\\bash.exe",
    "[coffeescript]": {
         "editor.tabSize": 2
    },
    "[shellscript]": {
        "editor.tabSize": 2
    },
    "telemetry.enableCrashReporter": false,
    "telemetry.enableTelemetry": false,
    "workbench.startupEditor": "newUntitledFile",
    "explorer.confirmDragAndDrop": false,
    "editor.acceptSuggestionOnCommitCharacter": false
}
